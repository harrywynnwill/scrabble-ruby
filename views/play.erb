<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Scrabble</title>
  </head>
  <body>
    <div class="game">

  <span id="js-rotating">  <%= @game.rack %></span> <br>
  <div id="rack">  <%= @game.rack %>  </div>

    <!-- <%= @game.bag %><br> -->

    </div>
    <script src="//cdn.jsdelivr.net/jquery/2.1.3/jquery.min.js"></script>
       <script>window.jQuery || document.write('<script src="bower_components/jquery/jquery.min.js"><\/script>')</script>
       <script src="bower_components/morphext/dist/morphext.js"></script>
       <script>
       $("#rack").hide();

       $("#js-rotating").Morphext({
           animation: "rotateIn",
           complete: function () {
           // 1. Stop if phrase index is 3
           if (this.index === 6) {
               this.stop();
           }

           $("#rack").hide()
          }
        });


       </script>
  </body>
</html>
